{
  "moduleFileExtensions": ["js", "json", "ts"],
  "testEnvironment": "node",
  "testRegex": "\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "statements": 0,
      "branches": 0,
      "functions": 0,
      "lines": 0
    }
  },
  "clearMocks": false,
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": ["/node_modules/", "/test/", "/tests/"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.module.ts",
    "!src/**/*.dto.ts",
    "!src/**/*.enum.ts",
    "!src/**/*.entity.ts",
    "!src/main.ts",
    "!src/shared/shared.module.ts",
    "!src/config/*.ts"
  ],
  "setupFiles": ["./jest.setup.ts"]
}
